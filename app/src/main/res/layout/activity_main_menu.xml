<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="pauline.mygame.MainMenuActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:baselineAligned="false">
    <!--android:background="@drawable/background_repeat">-->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:id="@+id/title_text_view"
            android:text="@string/title"
            android:editable="true"
            android:textColor="#ffffff"
            android:textSize="50dp"
            android:paddingTop="25dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:id="@+id/subtitle_text_view"
            android:text="@string/subtitle"
            android:editable="true"
            android:textColor="#ffffff"
            android:textSize="30dp"
            android:paddingBottom="25dp"/>

        <!--<ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:padding="20dp"
            android:src="@drawable/title"/>-->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:id="@+id/bestscore_text_view"
            android:text="(best score)"
            android:editable="true"
            android:textColor="#ffffff"
            android:padding="5dp"/>

        <Button
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:text="@string/button_play_str"
            android:id="@+id/play_button"
            android:layout_gravity="center_horizontal"
            android:onClick="openGame"
            android:textColor="#ffffff"
            android:background="@drawable/button_bottom_border" />

        <Button
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:text="@string/button_settings_str"
            android:id="@+id/settings_button"
            android:layout_gravity="center_horizontal"
            android:onClick="openSettings"
            android:textColor="#ffffff"
            android:background="@drawable/button_bottom_border" />

        <Button
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:text="@string/button_exit_str"
            android:id="@+id/exit_button"
            android:layout_gravity="center_horizontal"
            android:onClick="closeGame"
            android:textColor="#ffffff"
            android:background="#00ffffff" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ImageView
            android:adjustViewBounds="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/main_menu_background"
            android:layout_alignParentBottom="true" />

    </RelativeLayout>

</RelativeLayout>